/**app.wxss**/
@import "utils/wxParse/wxParse.wxss";
page{
  background-color: #F8F8F8;
}
.main{
  padding: 3%;
  word-break: break-all;
  font-size:14px;
}
.ttl{
  margin:3% 3% 0;
  /*background-image: linear-gradient(to top, #EEEEEE, #7093c0);*/
  background-color: #0168c0;
  color: #FFF;
  padding: 2%;
  border:1px solid #FFF;
  border-radius: 5px;
  box-shadow:0 0 5px #DDD;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
}
.container{
  padding:3%;
  background-color: #FFF;
  border-radius: 5px;
  box-shadow:0 0 5px #EEE;
  font-size: 14px;
  line-height: 1.6em;
}
.center{
  text-align: center;
}
.wxParse-img{
  display:block;
  max-width:100%;
  margin:1rem 0;
}
.wxParse-tr{
  margin-top:-1px;
}
.wxParse-tr:first-of-type{
  margin-top:0px;
}
.wxParse-th{
  border-top:none;
}
.wxParse-p{
  margin-bottom:1em;
  line-height:1.6em
}

#list-img-2{}
#list-img-2 .li{background-color: #fff; border:1px solid #EEE; padding: 5px; margin-bottom: 1em; box-shadow:0 0 5px #EEE; border-radius:5px; width:42%; margin:2%; float:left;}
#list-img-2 .img{ max-width: 100%; height:42vw;}
#list-img-2 .title{font-size:12px; line-height: 1.6em; height: 1.6em; overflow: hidden; text-overflow:ellipsis; white-space:nowrap; text-align:center;}

#list-img-3{margin:-2%;}
#list-img-3 .li{background-color: #fff; border:1px solid #EEE; padding: 5px; margin-bottom: 1em; box-shadow:0 0 5px #EEE; border-radius:5px; width:25.3333%; margin:2%; display:inline-block;}
#list-img-3 .img{ max-width: 100%; height:20vw;}
#list-img-3 .title{font-size:12px; line-height: 1.6em; height: 1.6em; overflow: hidden; text-overflow:ellipsis; white-space:nowrap; text-align:center;}

#list-text{}
#list-text .li{ background:url(http://beta.foru.net.cn/mcmswx/minip/images/share/bg_li_text.png) no-repeat 97% center #FFF; border:1px solid #EEE; padding: 3% 6% 3% 3%; margin-bottom: 1em; border-radius: 5px; box-shadow:0 0 5px #EEE; position: relative; }
#list-text .title{ font-size:12px; line-height: 1.5em; position: relative; }